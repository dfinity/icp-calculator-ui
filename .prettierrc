{
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-organize-imports"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": ["src/**/*.svelte", "src/*.svelte"],
      "options": {
        "plugins": [
          "prettier-plugin-svelte",
          "prettier-plugin-organize-imports"
        ],
        "parser": "svelte"
      }
    }
  ]
}
